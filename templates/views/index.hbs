<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Wholesale Cabinets Warehouse | Home">
    <meta name="author" content="Karthik Gangadharaiah">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <style>
        main>.container {
            padding: 60px 15px 0;
        }
    </style>

    <title>Wholesale Cabinets Warehouse | Home</title>

    {{>header}}
</head>

<body class="d-flex flex-column h-100">

    <main class="flex-shrink-0">
        <div class="container">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/slider-1a.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/slider-2a.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/slider-3a.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-4">
                    <img src="/images/free-shipping.png">
                </div>
                <div class="col-md-4">
                    <img src="/images/free-samples.png">
                </div>
                <div class="col-md-4">
                    <img src="/images/free-designs.png">
                </div>
            </div>

            <hr>

            <div class="row">
                {{#each products}}
                <div class="col-md-4">
                    <div class="card align-items-center">
                        <img src="/products/{{this.productPath}}/1.png" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text text-decoration-line-through">{{this.dimensions}} {{this.oldPrice}}</p>
                            <p class="fw-bold card-text">{{this.dimensions}} {{this.currentPrice}}</p>

                            <ul>
                                {{#each this.features}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>

                            <a href="#" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            <hr>

            <br>
            <br>
            <br>

        </div>
    </main>

    {{>footer}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
    <script src="/js/index-functions.js"></script>
</body>

</html>